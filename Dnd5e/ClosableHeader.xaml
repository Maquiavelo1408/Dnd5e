<UserControl x:Class="Dnd5e.ClosableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dnd5e"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="X" Height="19" HorizontalAlignment="Right" Margin="0,3,4,0"
                    Name="buttonClose" VerticalAlignment="Top" Width="20" FontFamily="Courier"
                    Visibility="Visible" Padding="0" ToolTip="Close" FontSize="14"/>
        <Label Content="TabItem" Height="23" HorizontalAlignment="Left"
               Margin="4,1,0,0" Name="labelTabTitle" VerticalAlignment="Top" FontSize="12"/>
    </Grid>
</UserControl>
